# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tasket_db
DB_USER=your_username
DB_PASSWORD=your_password

# JWT Configuration (MUST be cryptographically secure, at least 64 bytes)
JWT_SECRET=your-super-secret-jwt-key-at-least-64-bytes-long-generated-with-secure-random-replace-this-immediately
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (Railway will serve frontend from same domain)
FRONTEND_URL=https://your-railway-app.railway.app

# CORS Origins (Railway will serve from same origin)
ALLOWED_ORIGINS=https://your-railway-app.railway.app

# WebSocket Configuration
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100